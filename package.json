{
  "name": "techtalent-api",
  "version": "0.1.0",
  "private": true,
  "description": "TechTalent backend API server",
  "main": "./src/index.ts",
  "engines": {
    "node": ">=12.x.x"
  },
  "scripts": {
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit",
    "test:watch": "NODE_ENV=test jest --watch",
    "start": "node dist/server.js",
    "start:dev": "NODE_ENV=development nodemon",
    "start:debug": "NODE_ENV=development DEBUG=log nodemon --config nodemon-debug.json",
    "build": "rimraf ./dist && tsc --build tsconfig.build.json && mkdir ./dist/templates && cp -r ./src/templates ./dist",
    "lint": "tslint --project tsconfig.json",
    "prettier:write": "prettier --write '**/*.ts'",
    "sexy:code": "yarn tsc && yarn lint && yarn prettier:write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "yarn sexy:code"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@mailchimp/mailchimp_transactional": "^1.0.19",
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "faker": "^5.1.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.0",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "nodemon": "^2.0.4",
    "passport": "^0.4.1",
    "passport-github": "^1.1.0",
    "passport-google-oauth": "^2.0.0",
    "passport-linkedin-oauth2": "^2.0.0",
    "passport-local": "^1.0.0",
    "rimraf": "^3.0.2",
    "swagger-jsdoc": "^4.2.0",
    "swagger-ui-express": "^4.1.4",
    "tslib": "^2.0.2",
    "validator": "^13.1.17",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.7",
    "@types/ejs": "^3.0.4",
    "@types/express": "^4.17.8",
    "@types/express-validator": "^3.0.0",
    "@types/faker": "^5.1.2",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.36",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.11.1",
    "@types/passport": "^1.0.4",
    "@types/passport-github": "^1.1.5",
    "@types/passport-google-oauth": "^1.0.41",
    "@types/passport-linkedin-oauth2": "^1.5.1",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.10",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/validator": "^13.1.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": ">=10",
    "prettier": "^2.1.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.4.0",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.3"
  }
}
